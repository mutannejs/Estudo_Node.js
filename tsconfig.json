{
  "compilerOptions": {
    "module": "CommonJS",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
  },
  "exclude": ["dist/", "node_modules", "assets/"],
  "include": ["src/"]
}
